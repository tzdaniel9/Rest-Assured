<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Test Suite" parallel="methods"
       thread-count="4">

    <listeners>
        <listener
                class-name="com.api.listeners.TestListeners"/>
    </listeners>

    <test name="API Tests">
        <groups>
            <run>
                <include name="auth"/>
                <include name="user"/>
            </run>
        </groups>
        <classes>
            <class name="com.api.tests.LoginTests"/>
            <class name="com.api.tests.GetProfileRequestTest"/>
        </classes>
    </test>
</suite>
